<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_airpod_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_airpod_piece_img"
            android:layout_width="19.5dp"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/left_airpod_piece_charge_img"
                android:layout_width="19.5dp"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:rotation="90"/>

            <TextView
                android:id="@+id/left_airpod_piece_charge_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/case_airpod_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/case_airpod_piece_img"
            android:layout_width="19.5dp"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/case_airpod_piece_charge_img"
                android:layout_width="19.5dp"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:rotation="90"/>

            <TextView
                android:id="@+id/case_airpod_piece_charge_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/right_airpod_piece"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/right_airpod_piece_img"
            android:layout_width="19.5dp"
            android:layout_height="39dp"
            android:layout_gravity="center_vertical"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="8dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/right_airpod_piece_charge_img"
                android:layout_width="19.5dp"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:rotation="90"/>

            <TextView
                android:id="@+id/right_airpod_piece_charge_text"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight=".5"
                android:layout_gravity="center_horizontal"
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>