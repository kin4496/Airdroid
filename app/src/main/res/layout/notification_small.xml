<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:theme="@style/Theme.AppCompat.DayNight">

    <LinearLayout
            android:id="@+id/left_airpod_piece"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/left_airpod_piece_img"
                android:layout_width="19.5dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

            <ImageView
                    android:id="@+id/left_airpod_piece_charge_img"
                    android:layout_width="19.5dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".5"
                    android:rotation="90" />

            <TextView
                    android:id="@+id/left_airpod_piece_charge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".5"
                    android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
                android:id="@+id/left_airpod_progress_bar"
                style="@android:style/Widget.Material.ProgressBar.Small.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminateTint="@android:color/holo_blue_bright"
                android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/case_airpod_piece"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/case_airpod_piece_img"
                android:layout_width="19.5dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

            <ImageView
                    android:id="@+id/case_airpod_piece_charge_img"
                    android:layout_width="19.5dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".5"
                    android:rotation="90" />

            <TextView
                    android:id="@+id/case_airpod_piece_charge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".5"
                    android:textSize="12sp" />
        </LinearLayout>

        <ProgressBar
                android:id="@+id/case_progress_bar"
                style="@android:style/Widget.Material.ProgressBar.Small.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminateTint="@android:color/holo_blue_bright"
                android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
            android:id="@+id/right_airpod_piece"
            android:layout_width="wrap_content"
            android:layout_height="64dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/right_airpod_piece_img"
                android:layout_width="19.5dp"
                android:layout_height="39dp"
                android:layout_gravity="center_vertical" />

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:padding="8dp">

            <ImageView
                    android:id="@+id/right_airpod_piece_charge_img"
                    android:layout_width="19.5dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".5"
                    android:rotation="90" />

            <TextView
                    android:id="@+id/right_airpod_piece_charge_text"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight=".5"
                    android:textSize="12sp" />

        </LinearLayout>

        <ProgressBar
                android:id="@+id/right_airpod_progress_bar"
                style="@android:style/Widget.Material.ProgressBar.Small.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:indeterminateTint="@android:color/holo_blue_bright"
                android:visibility="gone" />

    </LinearLayout>

</LinearLayout>