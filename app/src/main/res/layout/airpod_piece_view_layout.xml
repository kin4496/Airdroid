<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    >

    <ImageView
        android:id="@+id/airpod_piece_img"
        android:layout_width="90dp"
        android:layout_height="135dp"
        android:padding="8dp"
        android:adjustViewBounds="true"/>

    <ProgressBar
        android:id="@+id/airpod_piece_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="10dp"
        android:indeterminateTint="@android:color/holo_blue_bright"
        style="@android:style/Widget.Material.ProgressBar.Small.Title"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/airpod_piece_charge_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotation="90"/>

        <TextView
            android:id="@+id/airpod_piece_charge_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
