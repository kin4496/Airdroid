<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:padding="@dimen/box_inset_layout_padding"
        tools:context=".deviceactivity.DeviceStatusActivity"
        tools:deviceIds="wear">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <TextView
                android:id="@+id/text_view_airpod_name"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/grey"
                android:layout_height="wrap_content" />

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

            <LinearLayout
                    android:id="@+id/left_airpod_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/left_airpod_piece_img"
                        android:layout_width="19.5dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/left_airpod_piece_charge_img"
                            android:layout_width="19.5dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".5"
                            android:rotation="90" />

                    <TextView
                            android:id="@+id/left_airpod_piece_charge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".5"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                </LinearLayout>

                <ProgressBar
                        android:id="@+id/left_airpod_progress_bar"
                        style="@android:style/Widget.Material.ProgressBar.Small.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:indeterminateTint="@android:color/holo_blue_bright"
                        android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/case_airpod_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/case_airpod_piece_img"
                        android:layout_width="19.5dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/case_airpod_piece_charge_img"
                            android:layout_width="19.5dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".5"
                            android:rotation="90" />

                    <TextView
                            android:id="@+id/case_airpod_piece_charge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".5"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                </LinearLayout>

                <ProgressBar
                        android:id="@+id/case_progress_bar"
                        style="@android:style/Widget.Material.ProgressBar.Small.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:indeterminateTint="@android:color/holo_blue_bright"
                        android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/right_airpod_piece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">

                <ImageView
                        android:id="@+id/right_airpod_piece_img"
                        android:layout_width="19.5dp"
                        android:layout_height="39dp"
                        android:layout_gravity="center" />

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="8dp">

                    <ImageView
                            android:id="@+id/right_airpod_piece_charge_img"
                            android:layout_width="19.5dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".5"
                            android:rotation="90" />

                    <TextView
                            android:id="@+id/right_airpod_piece_charge_text"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_weight=".5"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                </LinearLayout>

                <ProgressBar
                        android:id="@+id/right_airpod_progress_bar"
                        style="@android:style/Widget.Material.ProgressBar.Small.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:indeterminateTint="@android:color/holo_blue_bright"
                        android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.wear.widget.BoxInsetLayout>